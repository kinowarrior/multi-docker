{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "arcseldon/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "arcseldon/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "arcseldon/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "arcseldon/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        "hostPort": 80,
        "containerPort": 80
      ],
      "links": [
        "client", "server"
      ]
    }
  ]
}
